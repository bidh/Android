<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        android:textSize="@dimen/text_size"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bike_name_list_ride"
        android:layout_weight="1"
        android:textSize="@dimen/text_size"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bike_type"
        android:layout_weight="1"
        android:textSize="@dimen/text_size"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bike_start_list_ride"
        android:layout_weight="1"
        android:textSize="@dimen/text_size"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bike_start_date_list_ride"
        android:layout_weight="1"
        android:textSize="@dimen/text_size"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bike_end_list_ride"
        android:layout_weight="1"
        android:textSize="@dimen/text_size"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bike_end_date_list_ride"
        android:layout_weight="1"
        android:textSize="@dimen/text_size"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bike_price_list_ride"
        android:layout_weight="1"
        android:textSize="@dimen/text_size"/>

</LinearLayout>